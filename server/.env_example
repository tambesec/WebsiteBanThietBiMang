# Environment & Server
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database (MySQL) - Update this with your actual MySQL connection
# Nếu không có password, để trống sau root@
DATABASE_URL="mysql://root:password@localhost:3306/network_store_db"

# JWT Configuration (Generated for dev; change in production)
JWT_SECRET=dev_jwt_secret_key_12345_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=dev_refresh_secret_key_12345_change_in_production
JWT_REFRESH_EXPIRE=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173,http://127.0.0.1:3000

# SMTP Configuration (Optional - leave empty if not using email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security
BCRYPT_ROUNDS=10
SESSION_EXPIRY=3600

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
